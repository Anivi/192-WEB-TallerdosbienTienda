<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <link rel="stylesheet" href="styles/reset.css">
    <link rel="stylesheet" href="styles/header.css">
    <link rel="stylesheet" href="styles/footer.css">
    <link rel="stylesheet" href="styles/carrito.css">
</head>

<body>
    <section class="landing">
        <header class="barra">

            <div class="barra__logo">
                <img class="logo" src="imagenes/logo.png">
            </div>

            <div class="barra__icono">
                <img alt="Icono" src="imagenes/iconos/bars.svg">
            </div>

            <div class="barra__navegador">
                <a href="/">Home</a>
                <a href="#">¿Quienes somos?</a>
                <a class="barra__navegador-activo" href="/tienda?var=general">Tienda</a>
                <a href="#">¡Aprende!</a>
                <input type="text" placeholder="¿Que estas buscando?">
            </div>
        </header>

        <h1>Tus productos:</h1>

        <div class="lista">
            {{#each productos}}
            <div class="prod">
                <img src="{{imagenes.[0]}}" alt="" class="prod__img" width="15%" height="35%">

                <div class="prod__elems">
                    <h2>{{name}}</h2>
                    <h6>Tamaño: {{tamaño}}</h6>
                    <h6>Textura: {{Textura}}</h6>
                </div>
                <h6>Precio: ${{precio}}</h6>
            </div>
            {{/each}}

        </div>

        <h6 class="Tot">Total: ${{total}}</h6>

        <div class="log">
            <h1>Inicia sesión para comprar</h1>
            <p>Nombre</p>
            <input id="inp5" type="text" placeholder="Nombre">
            <p>Cedula</p>
            <input id="inp6" type="text" placeholder="Cedula">

            <div id="entrar">Entrar</div>
        </div>
</body>

<script>
    var btn = document.querySelector("#entrar");
    btn.addEventListener('click', function () {
        var nom = document.querySelector('#inp5').value;
        var ced = document.querySelector('#inp6').value;

        if (nom === "" || ced === "") {
            alert('llene todos los campos');
            return;
        } else {
            fetch(`/api/vars`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded'
                },
                body: `nombre=${nom}&cedula=${ced}`
            }).then(function (respuesta) {
                return respuesta.text();
            }).catch(function (error) {
                console.error(error);
            }).then(function (mensaje) {
                console.log(mensaje);
            });

            window.location.href = "/pago";
        }

    });
</script>

</html>